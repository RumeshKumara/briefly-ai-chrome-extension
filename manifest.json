{
  "manifest_version": 3,
  "name": "Briefly AI",
  "version": "1.0",
  "description": "AI-powered web page summarizer using Gemini.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
  
}